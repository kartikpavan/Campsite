<% layout('/layouts/boilerplate') %>
<div class="max-w-screen-md mx-auto">
  <h1 class="font-semibold text-3xl my-4 text-gray-800">All campgrounds</h1>

  <% for(let c of campgrounds) {%>

  <div class="pt-2 grid grid-cols-1 lg:grid-cols-3 xl:grid-cols-4 gap-2">
    <!--Card 1-->
    <div class="rounded overflow-hidden shadow-lg">
      <img class="w-full" src="<%=c.image %>" alt="in-the-woods-pic" />
      <div class="px-6 py-2">
        <div class="font-bold text-xl mb-2"><%=c.title %></div>
        <div class="font-semibold text-md mb-1">â‚¹ <%=c.price %></div>
        <p class="text-gray-700 text-base"><%= c.description %></p>
        <button class="bg-gray-800 px-4 py-1 mt-2 text-white text-semibold">
          <a href="/campgrounds/<%=c._id%>">See more</a>
        </button>
      </div>
    </div>
  </div>
  <% } %>
</div>
