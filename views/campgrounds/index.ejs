<% layout('/layouts/boilerplate') %>
  <div class="max-w-screen-md mx-auto">
    <h1 class="font-semibold text-3xl my-4 text-gray-800">All campgrounds</h1>

    <% for(let c of campgrounds) {%>

      <!--Card 1-->
      <div class=" w-full lg:max-w-full lg:flex mb-8">
        <div
          class="h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden"
          style="background-image: url('<%=c.image %>')">
        </div>
        <div
          class="border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
          <div class="mb-1">

            <div class="text-gray-900 font-bold text-xl mb-2">
              <%=c.title %>
            </div>
            <p class="text-sm text-gray-600 flex items-center">
              â‚¹ <%=c.price %>
            </p>
            <p class="text-gray-700 text-base">
              <%= c.description %>
            </p>
            <button
              class="bg-gray-800 px-4 py-1 mt-2 text-white text-semibold hover:text-gray-800 hover:text-bolder hover:outline hover:bg-white transition ease-out">
              <a href="/campgrounds/<%=c._id%>">EXPLORE</a>
            </button>
          </div>
        </div>
      </div>
      <% } %>
  </div>