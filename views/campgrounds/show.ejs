<% layout('/layouts/boilerplate') %>
  <div class="max-w-screen-sm mx-auto">
    <div class="mt-6 bg-white shadow-lg rounded-xl border ">
      <div class="h-2/5"><img src="<%=campgrounds.image%>" class="mb-2" alt="intTheWoodsImage" /></div>

      <div class="font-semibold text-2xl text-gray-800 ml-4 mb-1">
        <%=campgrounds.title %>
      </div>
      <p class="text-gray-800 ml-4 mb-6">
        <%=campgrounds.description %>
      </p>
      <p class="text-gray-500 text-sm ml-4 mb-2 ">
        <%=campgrounds.location %>
      </p>
      <hr class="text-gray-300">
      <p class="text-gray-700 text-md ml-4 my-2 ">
        â‚¹ <%=campgrounds.price %>
      </p>
      <hr class="text-gray-300">

      <div class="flex">
        <button
          class=" ml-4 mb-1 text-md font-semibold my-2 py-2 px-6 bg-gray-800 text-white hover:bg-white hover:text-gray-800 hover:outline transition ease-in ">
          <a href="/campgrounds/<%=campgrounds._id%>/edit ">EDIT </a></button>


        <form action="/campgrounds/<%=campgrounds._id%>?_method=DELETE " method="POST">
          <button
            class=" ml-4 mb-1 text-md font-semibold my-2 py-2 px-6 bg-gray-800 text-white hover:bg-white hover:text-gray-800 hover:outline transition ease-in ">Delete</button>
        </form>
      </div>
      <div class="bg-gray-200 text-gray-400 mt-2 ">
        <p class="ml-4">
          <%=campgrounds.created_at%>
        </p>
      </div>

    </div>
  </div>